{
  "name": "vscode-book-reader",
  "displayName": "book reader",
  "description": "Support reading epub、mobi、azw3、pdf、fk8、fb2、cbz files.",
  "publisher": "lindacong",
  "version": "1.0.5",
  "icon": "resource/public/logo.png",
  "repository": {
    "url": "https://github.com/jinhuan138/vscode-book-reader.git",
    "type": "git"
  },
  "engines": {
    "vscode": "^1.85.2"
  },
  "keywords": [
    "reader",
    "epub",
    "mobi",
    "pdf",
    "azw3",
    "fk8",
    "cbz",
    "fb2"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:book-reader"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bookReader",
        "title": "book reader"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "book-reader",
          "title": "book-reader",
          "icon": "resource/public/icon.svg"
        }
      ]
    },
    "views": {
      "book-reader": [
        {
          "id": "book-reader-webview",
          "name": "view",
          "type": "webview"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "bookReader",
        "displayName": "book reader",
        "selector": [
          {
            "filenamePattern": "*.epub"
          },
          {
            "filenamePattern": "*.mobi"
          },
          {
            "filenamePattern": "*.fk8"
          },
          {
            "filenamePattern": "*.azw3"
          },
          {
            "filenamePattern": "*.fb2"
          },
          {
            "filenamePattern": "*.cbz"
          },
          {
            "filenamePattern": "*.pdf"
          }
        ]
      }
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "vscode:prepublish": "pnpm run compile",
    "package": "pnpm vsce package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "format": "prettier --write src/**/*.{ts} resource/**/*.{ts,vue}"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "~18.19.31",
    "@types/vscode": "^1.85.2",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vite": "^5.2.10",
    "vite-plugin-singlefile": "^2.0.1"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "canvas": "^2.11.2",
    "element-plus": "^2.7.3",
    "mitt": "^3.0.1",
    "photoswipe": "^5.4.4",
    "vue": "^3.4.26",
    "vue-book-reader": "^1.0.7",
    "vue-easy-lightbox": "^1.19.0",
    "vue-reader": "^1.2.15"
  },
  "vsce": {
    "dependencies": false,
    "useYarn": false
  }
}
